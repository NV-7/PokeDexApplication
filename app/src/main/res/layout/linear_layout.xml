<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

<LinearLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <TextView
        android:id="@+id/pokedexHeader"
        android:layout_width="176dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:text="@string/pokedexheader"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pokedexSubHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:text="@string/pokedexsubheader"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/nationalNumLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/nationalnumlabel"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nationalNumEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nationalEdit"
        android:inputType="number"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/namelabel"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/nameEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="text"
        android:text="@string/nameEdit" />

    <TextView
        android:id="@+id/Species"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/specieslabel"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/speciesEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="text"
        android:text="@string/speciesEdit" />

    <TextView
        android:id="@+id/Gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/genderlablel"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/genderRadioGroup"
        android:layout_width="329dp"
        android:layout_height="84dp"
        android:layout_marginStart="0dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButtonMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:text="@string/maleRadio"
            app:layout_constraintStart_toStartOf="@+id/nameEdit"
            app:layout_constraintTop_toTopOf="@+id/Gender" />

        <RadioButton
            android:id="@+id/radioButtonFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/femaleRadio"
            app:layout_constraintStart_toEndOf="@+id/radioButtonMale"
            app:layout_constraintTop_toTopOf="@+id/radioButtonMale" />

        <RadioButton
            android:id="@+id/radioButtonUnknown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/radioButtonUnknown"
            app:layout_constraintStart_toEndOf="@+id/radioButtonFemale"
            app:layout_constraintTop_toTopOf="@+id/radioButtonMale" />


    </RadioGroup>

    <TextView
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/heightlabel"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/heightEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="@string/heightEdit" />

    <TextView
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/weightlabel"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/weightEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="@string/weightEdit" />

    <TextView
        android:id="@+id/basestat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="@string/basestatsheader"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/levelLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="@string/levellabel"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/levelSpinner"
        android:layout_width="257dp"
        android:layout_height="19dp"
        android:layout_marginEnd="0dp" />

    <TextView
        android:id="@+id/hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="@string/hplabel"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/hpEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="number"
        android:text="@string/hpEdit" />

    <TextView
        android:id="@+id/attack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="@string/attacklabel"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/attackEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="number"
        android:text="@string/attackEdit" />

    <TextView
        android:id="@+id/defense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="@string/defenselabel"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/defenseEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="number"
        android:text="@string/defenseEdit" />


    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:text="@string/submitButton" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/resetButton" />

    <Button
        android:id="@+id/layoutSwitcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/layoutButton"
        />


</LinearLayout>

</ScrollView>